services:
  db:
    image: postgres:latest
    restart: always
    environment:
      POSTGRES_USER: rag_user
      POSTGRES_PASSWORD: abc123
      POSTGRES_DB: rag_db
    ports:
      - "5432:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U rag_user"]
      interval: 10s
      retries: 5

  chromadb:
    image: ghcr.io/chroma-core/chroma:latest
    restart: always
    ports:
      - "8001:8001"
    volumes:
      - chroma_data:/chroma

  backend:
    build: .
    restart: always
    depends_on:
      db:
        condition: service_healthy
    environment:
      DATABASE_URL: postgresql://rag_user:abc123@db:5432/rag_db
    ports:
      - "8000:8000"

volumes:
  chroma_data:

